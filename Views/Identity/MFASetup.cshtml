@model MFASetupViewModel

@{
    ViewData["Title"] = "MFASetup";
}

<p>Please enter the code below in your authenticator application.</p>
<p>@Model.Token</p>

<div id="qrCode" />

<form asp-controller="Identity" asp-action="MFASetup" method="post">
    <input type="hidden" asp-for="Token" />
    <div>
        <label asp-for="Code"></label>
        <input type="text" asp-for="Code" class="form-control" />
    </div>
    <button type="submit" class=" btn btn-primary">Submit</button>
</form>
<br />
<p>Alternatively, scan the below QRCode with your mobile phone.</p>
@section Scripts
{
    <script src="~/js/qrcode.js" asp-append-version="true"></script>
    <script type="text/javascript">
            new QRCode(document.getElementById("qrCode"), "@Model.QRCodeUrl");
    </script>
}

